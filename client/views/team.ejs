<%- include('./partials/header') %>

<div class="my-team">
  <% for (let i = 0; i < team.length; i++) { %>
      <div class="pokedex-details">
          <p class="pokedex-details-name"><%= nameFr[i] %></p>
          <a class="pokedex-details-img" href="pokemon/<%= team[i].id %>">
              <% if (team[i].sprites.front_default == null) { %>
                  <img src="<%= team[i].sprites.other[2] %>" alt="">
              <% } else { %>
                  <img src="<%= team[i].sprites.front_default %>" alt="">
              <% } %>
          </a>
          <ul class="pokedex-details-type-liste">
              <% for (const type of team[i].types) { %>
                  <li class="pokedex-details-typebox-<%= type.type.name %>"><%= type.type.name %></li>
              <% } %>
          </ul>
          <div class="add-button">
              <a method="get" href="/delete/<%= team[i].id %>">Supprimer le Pokémon de l'équipe</a>
          </div>
      </div>
  <% } %>
</div>

<%- include('./partials/footer') %>